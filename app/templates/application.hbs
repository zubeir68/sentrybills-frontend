{{#if (media 'isDesktop')}}
      <div class="ui grid">
          <div class="five wide column">
            <div class="ui visible massive very wide inverted vertical sidebar menu">
                <a href="/" class="item" id="main_heading">Sentrybills</a>
                {{#link-to "bills.new" class="item"}}
                    Add a new Bill <i class="plus icon"></i>
                {{/link-to}}
                <a href="https://zubeirtech.herokuapp.com/" target="_blank" class="item">Check out my other projects</a>
            </div>
          </div>
          <div class="ten wide column">
              <br>
              <br>
              {{#if session.isAuthenticated}}
                <a {{action 'invalidateSession'}}>
                  <button class="ui green button">Loggout</button>
                </a>
              {{else}}
                {{#link-to 'login'}}
                  <button class="ui green button">Login</button>
                {{/link-to}}
              {{/if}}
              <br>
              <br>
              {{outlet}}
          </div>
          <div class="one wide column"></div>
      </div>

{{/if}}


