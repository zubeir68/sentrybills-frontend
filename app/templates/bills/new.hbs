{{#if (media 'isDesktop')}}
  <div class="ui container">
    <div class="ui centered grid">
      <div class="ten wide column">
        <div class="ui green raised segment">
          <form class="ui form">
            <div class="required field">
              <label>Name of the bill</label>
              {{input value=this.model.name type="text" placeholder="Enter name..."}}
            </div>
            <div class="required field">
              <label>How much is the bill</label>
              {{input value=this.model.total type="number"  placeholder="Enter total..."}}
            </div>
            <div class="field">
              <label>When is it due - <i>optional</i></label>
              {{input value=this.model.due type="date"  placeholder="Enter note..."}}
            </div>
            <div class="field">
              <label for="">Notes - <i>optional</i></label>
              {{textarea value=this.model.note   placeholder="Enter date..."}}
            </div>
            <div class="field">
              <label>Add to Google Calendar as Event</label>
              <div class="ui toggle checkbox">
                {{input checked=this.model.addToCal type="checkbox" name="public"}}
                <label>powererd by <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/2/2f/Google_2015_logo.svg/272px-Google_2015_logo.svg.png" class="ui mini spaced image" alt="google imaeg"></label>
              </div>
            </div>
            <br>
            <button class="ui inverted circular green button" type="submit" {{action "new"}}>Submit</button>
          </form>
        </div>
      </div>
      <div class="six wide column"></div>
    </div>
  </div>
{{/if}}
