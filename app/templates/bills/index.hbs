<div class="ui container">
  <div class="ui centered grid">
    <div class="sixteen wide column">
      <div class="ui raised green segment">
        <div class="label"><strong>Balanced Bills Progress</strong></div>
        {{#ui-progress percent=this.percentage class="teal indicating" id="progress"}}
          <div class="bar"></div>
        {{/ui-progress}}
        <br>
        <div class="ui big form">
          <div class="two fields">
            <div class="field">
              <label for="">Total</label>
              <br>
              <strong>{{this.totalNum}}</strong>
            </div>
            <div class="field">
              <label for="">Finished</label>
              <br>
              <strong>{{this.balanced}}/ {{this.model.length}}</strong>
            </div>
          </div>
        </div>
        <br>
        <br>
        {{#link-to "bills.new"}}
          <button class="ui inverted green button">
            <i class="plus icon"></i> Add new Bill
          </button>
        {{/link-to}}
      </div>
    </div>
  </div>
  <div class="ui centered grid">
    <div class="sixteen wide column">
      {{#each model as |bill|}}
        <div class="ui red raised segment">
          <div class="ui big form">
            <div class="three fields">
              <div class="field">
                <label for="">Name</label>
                {{bill.name}}
              </div>
              <div class="field">
                <label for="">Total</label>
                {{bill.total}}
              </div>
              <div class="field">
                <label for="">Due</label>
                {{bill.due}}
              </div>
            </div>
            <div class="field">
              <label for="">Note</label>
              {{bill.note}}
            </div>
            <div class="three fields">
              <div class="field">
                {{#if bill.balanced}}
                  <div class="field">
                    <label for="">
                      <i class="green check icon"></i> Balanced
                    </label>
                  </div>
                {{else}}
                  {{#link-to "bills.edit" bill}}
                    <button class="ui violet inverted button" {{action "setToBalanced" bill}}>
                      <i class="check icon"></i>Balanced
                    </button>
                  {{/link-to}}
                {{/if}}
              </div>
              <div class="field">
                <button class="ui blue inverted button">
                  <i class="write icon"></i>Edit Bill
                </button>
              </div>
              <div class="field">
                <button class="ui red inverted button">
                  <i class="trash icon"></i>Delete Bill
                </button>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>